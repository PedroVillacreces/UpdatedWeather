<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UpdatedWeather.Views.AllCountries"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             Title="Tiempo de países">             
    <ContentPage.Content>
        <ScrollView>
        <StackLayout
            Padding="20">
                <Label
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    Text="Country Weather">                    
                </Label>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>